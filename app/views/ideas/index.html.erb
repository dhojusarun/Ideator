<div data-controller='modal' class="max-w-screen-xl mx-auto p-4">

  <!-- Add Idea Button -->
  <button data-modal-target="default-modal" data-modal-toggle="default-modal"
          class='text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 hover:bg-blue-800 shadow-lg shadow-cyan-500/50 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-6'>
    Add New Idea
  </button>

  <!-- Add Idea Modal -->
  <div id="default-modal" tabindex="-1" aria-hidden="true"
       class="hidden fixed inset-0 z-50 flex justify-center items-center overflow-auto">
    <div class="relative w-full max-w-2xl max-h-full p-4">
      <div class="bg-white rounded-lg shadow dark:bg-gray-700">
        <%= simple_form_for Idea.new, data: { turbo: false, action:"submit->modal#hideModal" } do |f| %>
          <div class="flex items-center justify-between p-4 border-b rounded-t">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Add New Idea</h3>
            <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 flex justify-center items-center"
                    data-modal-hide="default-modal">&times;</button>
          </div>
          <div class="p-4 space-y-4">
            <%= f.input :description, input_html: { rows: 5, class: 'text-gray-800' } %>
            <%= f.input :author, input_html: { class: 'text-gray-800' } %>
          </div>
          <div class="flex items-center justify-end p-4 border-t rounded-b">
            <%= f.submit 'Submit', class: 'text-white bg-blue-700 hover:bg-blue-800 px-5 py-2.5 rounded-lg' %>
            <button data-modal-hide="default-modal" type="button"
                    class="text-white bg-red-700 hover:bg-red-800 px-5 py-2.5 rounded-lg ml-2">
              Cancel
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- List of Ideas -->
  <% @ideas.each do |idea| %>
    <div class="rounded overflow-hidden shadow-lg mb-4 p-6 bg-white">
      <div class="font-bold text-xl mb-2"><%= idea.description %></div>
      <p class="text-sm text-gray-700 mb-4"><%= idea.author %></p>
      <div class="flex space-x-2">
        <%= button_to 'Delete', idea_path(idea), method: :delete, data: {  turbo: false },
            class: 'text-white bg-red-700 hover:bg-red-800 px-4 py-2 rounded-lg',
            form: { data: { turbo_confirm: "Are you sure?" } } %>
        <%= link_to 'Revise', edit_idea_path(idea),
            class: 'text-white bg-blue-700 hover:bg-blue-800 px-4 py-2 rounded-lg' %>
      </div>
    </div>
  <% end %>

  <!-- Pagy Pagination -->
  <div class="mt-6 flex justify-center">
    <% pagy_nav(@pagy, link_extra: 'class="page"') %>
  </div>

</div>